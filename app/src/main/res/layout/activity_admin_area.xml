<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminArea">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/get_all_field"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:inputType="textPassword"
                android:hint="Admin Pass" />
            <Button
                android:id="@+id/get_all_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="GO" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Change Admin Information"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:typeface="serif"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Change ID: "
                android:textSize="15dp"
                android:background="#BCE8DD"
                android:layout_height="36dp"/>
            <EditText
                android:id="@+id/edit_AdminId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:hint="New/Old ID" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Password: "
                android:textSize="15dp"
                android:background="#BCE8DD"
                android:layout_height="36dp"/>
            <EditText
                android:id="@+id/edit_adminpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:hint="New/Old Pass"
                android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay4"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Old Password: "
                android:textSize="15dp"
                android:background="#BCE8DD"
                android:layout_height="36dp"/>
            <EditText
                android:id="@+id/edit_oldpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:hint="Put your Old passsword"
                android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:layout_marginLeft="50dp"
                android:text="Back" />

            <Button
                android:id="@+id/btnchangeadmininfo"
                android:layout_width="150dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="Change" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay6"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/go_to_btn"
                android:layout_width="match_parent"
                android:background="#DBE6F8"
                android:layout_height="40dp"
                android:text="Click to watch userlist"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:typeface="serif"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:visibility="gone"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Admin Pass: "
                android:textSize="15dp"
                android:background="#BCE8DD"
                android:layout_height="36dp"/>
            <EditText
                android:id="@+id/admin_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                android:hint="Put Pass for UserList"
                android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:layout_marginLeft="50dp"
                android:visibility="gone"
                android:text="Back" />

            <Button
                android:id="@+id/user_list_btn"
                android:layout_width="150dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="User List" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>