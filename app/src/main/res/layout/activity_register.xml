<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:text="Registration Form"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FAF8F8"
            android:textAlignment="center"
            android:background="#D39ED3"
            android:layout_height="wrap_content"/>


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/username"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Name: "
        android:textSize="15dp"
        android:background="#BCE8DD"
        android:layout_height="36dp"/>
    <EditText
        android:id="@+id/editname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:hint="Holder Name"
        android:inputType="textPersonName" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/usrid"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Email ID: "
            android:textSize="15dp"
            android:background="#BCE8DD"
            android:layout_height="36dp"/>
        <EditText
            android:id="@+id/editemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:hint="Holder Email"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userpass"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Password: "
            android:textSize="15dp"
            android:background="#BCE8DD"
            android:layout_height="36dp"/>
        <EditText
            android:id="@+id/editpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:hint="Holder Password"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/userconfirmpass"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Conf. Password: "
            android:textSize="15dp"
            android:background="#BCE8DD"
            android:layout_height="36dp"/>
        <EditText
            android:id="@+id/editconfirmpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:hint="Confirm Password"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adminpass"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Admin Password: "
            android:textSize="15dp"
            android:background="#BCE8DD"
            android:layout_height="36dp"/>
        <EditText
            android:id="@+id/editadminpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:hint="Admin Password"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="#FAF6F6"
            android:text="All the fields are must required "
            android:textSize="15dp"
            android:background="#30050D"
            android:layout_height="36dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn"
            android:layout_marginLeft="90dp"
            android:text="Back" />

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn"
            android:text="Register" />
    </LinearLayout>




</LinearLayout>